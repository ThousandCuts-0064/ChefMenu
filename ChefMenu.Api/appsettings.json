{
    "AllowedHosts": "*",
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File",
            "Serilog.Expressions"
        ],
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Information",
                "System": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "Console",
                            "Args": {
                                "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss}][{Level:u3}][{EnvironmentName}/{MachineName}/{ProcessId}/{TraceId}/{ThreadId}][{UserId}{_pipe}{Username}{_pipe}{UserRole}] {Message:lj}{NewLine}{Exception}"
                            }
                        },
                        {
                            "Name": "File",
                            "Args": {
                                "path": "Logs/log-.log",
                                "rollingInterval": "Day",
                                "rollOnFileSizeLimit": true,
                                "fileSizeLimitBytes": 8388608,
                                "retainedFileCountLimit": 30,
                                "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss}][{Level:u3}][{EnvironmentName}/{MachineName}/{ProcessId}/{TraceId}/{ThreadId}][{UserId}{_pipe}{Username}{_pipe}{UserRole}] {Message:lj}{NewLine}{Exception}"
                            }
                        }
                    ]
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId",
            "WithProcessId",
            "WithEnvironmentName"
        ],
        "Properties": {
            "Application": "ChefMenu"
        }
    }
}
